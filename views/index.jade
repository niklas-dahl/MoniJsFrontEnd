doctype html
html#html(ng-app='app', ng-controller='indexCtrl')
  head
    // Angular JQuery
    //script(src='./bower_components/angular/angular.min.js')
    script(src='http://code.angularjs.org/1.2.0rc1/angular.js')
    
    script(src='http://code.angularjs.org/1.2.0rc1/angular-animate.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    
    // Semantic
    link(rel='stylesheet', type='text/css', href='./bower_components/semantic/dist/semantic.min.css')
    script(src='./bower_components/semantic/dist/semantic.min.js')
    // Moment
    script(src='./bower_components/moment/moment.js')
    // Parser
    //script(src='./parser/bundle.js')
    // CSS and Js
    link(rel='stylesheet', type='text/css', href='style.css')
    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.css')
    
    script(src='controller.js')
    // Icon and title
    link(rel='icon', href='./res/moni.ico', type='image/vnd.microsoft.icon')
    title  Moni 
  body
    #header.ui.borderless.main.menu
      .ui.large.header(style='color: white;')
        img.logo(src='./res/moni.ico')
        |         Moni - Stundenabrechnung (WIP)

    
    #masterGrid
      #mainContainer
        div
          button.ui.button(ng-click='subWeek(5)')  << 
          button.ui.button(ng-click='subWeek(1)')  < 
          span.ui.huge.label
            | {{"Kalender Woche: " + activeWeek + ", " + activeMonthName + " " + activeYear}}
          button.ui.button(ng-click='addWeek(1)')  > 
          button.ui.button(ng-click='addWeek(5)')  >> 
        .ui.cards(style='margin-top:1em;')
          .animated.card(ng-repeat='dayInfo in currentWeekDays', ng-class="{{containerClass}}")
            div(ng-class='{greenCard: dayInfo.isWeekend, blueCard: !dayInfo.isWeekend}')
              p.content {{dayInfo.dayName + ": " + dayInfo.day + ". " + dayInfo.monthName}}
              input.description(style='margin-left:1em;margin-right:1em;', type='text', size='35', ng-model="inputs['input_' + dayInfo.wholeDate]")
              p(ng-repeat="s in inputs['input_' + dayInfo.wholeDate].split(',') track by $index")  {{$index + ": " + s}} 
              p {{ inputs | json}}
              .extra
                | Stunden: {{0}}
      #shortCutContainer
        h1 Shortcuts
        p ctb - dudud
        p ktl - dadada
        p Hallo
        p Hallo
